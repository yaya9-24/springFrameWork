<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test.com.member">


	<select id="M_SELECT_ALL"
		resultType="test.com.member.model.MemberVO">
		select * from member order by num desc
	</select>

	<select id="M_SELECT_LIST_NAME"
		resultType="test.com.member.model.MemberVO">
		select * from member where name like #{searchWord} order by
		num desc
	</select>

	<select id="M_SELECT_LIST_ID"
		resultType="test.com.member.model.MemberVO">
		select * from member where id like #{searchWord} order by
		num desc
	</select>

	<select id="M_SELECT_ONE"
		resultType="test.com.member.model.MemberVO">
		select * from member where num=#{num}
	</select>

	<insert id="M_INSERT">
		insert into member(num,id,pw,name,tel)
		values(seq_member.nextval,#{id},#{pw},#{name},#{tel})
	</insert>

	<update id="M_UPDATE">
		update member set
		id=#{id},pw=#{pw},name=#{name},tel=#{tel} where num=#{num}
	</update>

	<delete id="M_DELETE">
		delete from member where num=#{num}
	</delete>
</mapper>